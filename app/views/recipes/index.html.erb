<p id="notice"><%= notice %></p>

<h1>Recipes</h1>
<br>
<div class="container-fluid">
        <div class="row">
            <% @recipes.each do |recipe| %>
          <div class="col-md-4">
            <div class="recipe-box">
              <% if recipe.image? %>
              <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
              <% end %>
                  <h3 class="card-title"><%= recipe.title %></h3>
                    <h4 class="card-text"><%= recipe.description %></h4>
                    <div class="button__group">
                      <a class="button" data-filter="filter 1" <%= link_to 'Show', recipe %></a>
                        <a class="button" data-filter="filter 2" <%= link_to 'Edit', edit_recipe_path(recipe) %></a>
                        <a class="button" data-filter="filter 3" <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></a>
                </div><!--button_group-->
              </div><!--recipe-box-->
        </div><!-- col-md-4-->
    <% end %>
    </div><!-- row -->
<br>
<div class="button__group">
  <a class="button" data-filter="filter 1" <%= link_to 'New Recipe', new_recipe_path %></a>
</div>

</div>
