<div class="container-fluid">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

<p id="notice"><%= notice %></p>
<% if @recipe.image? %>
<%= image_tag @recipe.image.url, class: "recipe-show" %>
<% end %>
  <h2>
  <%= @recipe.title %>
</h2>
<p>
  <%= @recipe.description %>
</p>

<h3>Ingredients</h3>
  <ul>
    <% for @ingredient in @recipe.ingredients %>
    <li><%= @ingredient.content %></li>
    <% end %>
  </ul>

<h3>Steps</h3>
  <ol>
    <% for @step in @recipe.steps %>
    <li><%= @step.direction %></li>
    <% end %>
  </ol>
  <div class="button__group">
    <a class="button" data-filter="filter 1" <%= link_to 'Edit', edit_recipe_path(@recipe) %></a>
    <a class="button" data-filter="filter 2" <%= link_to 'Back', recipes_path %></a>
  </div>
</div>
</div>
</div>
